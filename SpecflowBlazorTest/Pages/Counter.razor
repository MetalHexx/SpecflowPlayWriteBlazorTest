@page "/counter"

<PageTitle>Counter</PageTitle>

<h1 id="counter-title">Counter</h1>

<p role="status">
    Current count: 
    <span id="counter-value">@currentCount</span>
</p>

<button class="btn btn-primary" id="increment-count-button" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
